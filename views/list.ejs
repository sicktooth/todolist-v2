<%- include('header'); -%>
        <main class="mx-auto my-12 max-w-sm">
                <header class="text-center mb-12">
                    <h1 class="bg-purple-300 p-2 text-white text-3xl font-bold arima" id="head"><%= listTitle %></h1>
                </header>
                <section class="bg-white box">
                    <ul>
                    <% newListItems.forEach(newItem => { %>
                        <form action="/delete" method="post">
                           <li class="item"><input name="checkBox" value="<%= newItem._id %>" onchange="this.form.submit()" type="checkbox" class="checkBox m-5 cursor-pointer"> <%= newItem.name %></li>
                           <input type="hidden" name="listName" value="<%= listTitle %>">
                        </form>
                    <% }) %>
                    </ul>
                    <form action="/" method="post" class="form">
                        <input class="arima font-bold" type="text" name="newItem" placeholder="New Item">
                        <button type="submit" class="btn" name="list" value=<%= listTitle %>>
                            +
                        </button>
                    </form>
                </section>
            
<%- include('footer'); -%>